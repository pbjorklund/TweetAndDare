.row
  .span12
    = link_to root_path do
      = image_tag "banner.png"
.navbar
  .navbar-inner
    .pull-right
      %ul.nav
        - if current_user
          %li.dropdown
            %a{ href: '#', data: { href: '#', toggle: 'dropdown' } }
              .pull-left{ style: 'margin-right: 5px;' }
                = image_tag current_user.image, style: 'width: 20px;', class: 'img-rounded'
              = current_user.nickname
              %i.caret
            %ul.dropdown-menu{ role: :menu, 'aria-labelledby' => :user }
              %li= link_to 'Dashboard', dashboard_index_path
              %li.divider
              %li= link_to 'Log out', logout_path
        - else
          %li
            = link_to "/auth/twitter" do
              %i.icon.icon-twitter
              = "Sign In"
