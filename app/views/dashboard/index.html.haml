.page-header
  %h1
    - if current_user.image
      = link_to image_tag(current_user.image), "http://www.twitter.com/#{current_user.nickname}"
    ="@#{current_user.nickname}"

%h2 My dares
= render :partial => "dares/dares_list", :locals => { :dares => current_user.owning_dares }

%h2 Dared
= render :partial => "dares/dares_list", :locals => { :dares => current_user.received_dares }