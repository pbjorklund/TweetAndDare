.row
  .span8.offset2
    %center
      = form_for @dare, url: dares_path, method: :post do |f|
        .row
          %span I dare&nbsp;
          %span
            = f.fields_for :dared_user do |dared_user_field|
              = dared_user_field.text_field :nickname, style: 'width: 400px;', placeholder: '@nickname'
            .field-decoration
          %br
          %br
        .row
          %span= "to"
          %br
          %br
          %span
            = f.text_field :text, style: 'width: 100%;', label: false, placeholder: 'do something . . .'
            .field-decoration
        .row
          .form-actions
            = f.submit 'Dare'
