.row
  .span8.offset2
    %center
      = form_for @dare, url: dares_path, method: :post, :validate => true do |f|
        .row
          %span.form-text I dare&nbsp;
          %span
            .field-decoration
            = f.text_field :target, style: 'width: 340px;', placeholder: '@nickname/#hashtag'
          %br
          %br
        .row
          %span.form-text= "to"
          %br
          %span
            .field-decoration
            = f.text_field :text, style: 'width: 100%;', label: false, placeholder: 'do something awesome . . .'
        .row
          .form-actions
            = f.submit 'Dare'

.row
  .span6
    - unless @recent_dares.empty?
      %h2= "Recent dares"
      = render partial: 'dares_list', locals: { dares: @recent_dares }
  .span6
    - unless @popular_dares.empty?
      %h2= "Popular dares"
      = render partial: 'dares_list', locals: { dares: @popular_dares }
