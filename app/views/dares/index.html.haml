.row
  .span8.offset2
    %center
      = form_for @dare, url: dares_path, method: :post do |f|
        .row
          %span I dare&nbsp;
          %span
            = f.text_field :target, style: 'width: 340px;', placeholder: '@nickname'
            .field-decoration
          %br
          %br
        .row
          %span= "to"
          %br
          %br
          %span
            = f.text_field :text, style: 'width: 100%;', label: false, placeholder: 'do something . . .'
            .field-decoration
        .row
          .form-actions
            = f.submit 'Dare'

  .span8.offset2
    %center
      .row
        - unless @recent_dares.empty?
          %h1 Recent dares
          %table
            %tbody
              - @recent_dares.each do |dare|
                %tr
                  %td
                    = link_to image_tag( dare.owner.image), 'http://www.google.com'
                    %a{ :href => "http://www.twitter.com/#{dare.owner.nickname}"}= dare.owner.nickname
                    dared
                    %a{ :href => "http://www.twitter.com/#{dare.dared_user.nickname}"}= dare.dared_user.nickname
                    to
                    = dare.text
